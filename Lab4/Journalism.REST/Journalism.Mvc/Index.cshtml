@page
@model Journalism.Mvc.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Pages/Journalists";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JournalistModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalistModel[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalistModel[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalistModel[0].Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JournalistModel[0].ExperienceYears)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JournalistModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceYears)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
